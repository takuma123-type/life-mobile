{
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["ES2020"],
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["./*", "../src/*"]
    }
  },
  "include": ["src", "App.tsx"]
}